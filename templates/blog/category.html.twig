        {{ category.name }}
    <div>
        <table>
            <td>
            <tr>
            <th>#</th>
            <th>title</th>
            <th>content</th>
            </tr>
    {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                </tr>
            </td>
            {% endfor %}
        </table>
    </div>
{% endblock %}